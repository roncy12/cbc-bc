{"components/themevale/category/subcategories":"{{#if category.subcategories}}\r\n    <div class=\"themevale_subCategories\">\r\n        <h2 class=\"subCategories-heading\">{{lang 'categories.sub-categories'}}</h2>\r\n        <div class=\"themevale_column themevale_column--col4\">\r\n            {{#each category.subcategories}}\r\n                <div class=\"item\">\r\n                    <div class=\"sub-category\">\r\n                        <div class=\"image\"><a href=\"{{url}}\"><img src=\"{{getImage image '80x80' (cdn 'img/CategoryDefault.jpg')}}\" alt=\"{{name}}\"></a></div>\r\n                        <div class=\"content\">\r\n                            <a class=\"title\" href=\"{{url}}\">{{name}}</a>\r\n                            <div class=\"product-count\">{{product_count}} {{#if product_count '>=' 2}}items{{else}} item {{/if}} </div>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n            {{/each}}\r\n        </div>\r\n    </div>\r\n{{/if}}\r\n"}
