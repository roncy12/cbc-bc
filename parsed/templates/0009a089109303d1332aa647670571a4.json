{"components/category/sort-box":"<fieldset class=\"form-fieldset actionBar-section\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n        <select class=\"form-select form-select--small\" name=\"sort\" id=\"sort\">\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\n            {{#if result_count}}\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n            {{/if}}\n        </select>\n    </div>\n</fieldset>\n\n","components/products/filter":"<form class=\"actionBar\" method=\"get\" data-sort-by data-show-products>\n    <fieldset class=\"form-fieldset actionBar-section\">\n        <div class=\"form-field\">\n            <label class=\"form-label\" for=\"limit\">{{lang 'common.sorter.show'}}</label>\n            <select class=\"form-select\" name=\"limit\" id=\"limit\">\n                <option value=\"20\" {{#if '20' '==' products_per_page }}selected{{/if}}>20 {{lang 'common.sorter.items_per_page'}}</option>\n                <option value=\"40\" {{#if '40' '==' products_per_page }}selected{{/if}}>40 {{lang 'common.sorter.items_per_page'}}</option>\n                <option value=\"60\" {{#if '60' '==' products_per_page }}selected{{/if}}>60 {{lang 'common.sorter.items_per_page'}}</option>\n                <option value=\"80\" {{#if '80' '==' products_per_page }}selected{{/if}}>80 {{lang 'common.sorter.items_per_page'}}</option>\n                <option value=\"100\" {{#if '100' '==' products_per_page }}selected{{/if}}>100 {{lang 'common.sorter.items_per_page'}}</option>\n                <!--<option value=\"30\" {{#if '30' '==' products_per_page }}selected{{/if}}>30 {{lang 'common.sorter.items_per_page'}}</option>-->\n            </select>\n        </div>\n    </fieldset>\n    <script>\n        function getUrlVars() {\n            var vars = {};\n            var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {\n                vars[key] = value;\n            });\n            return vars;\n        }\n        (function(){\n            try {\n                var c = getUrlVars()[\"limit\"];\n                if(c == undefined) c = {{theme_settings.categorypage_products_per_page}};\n                if(c != undefined){\n                    var limit = document.querySelectorAll('select#limit option');\n                    Array.prototype.forEach.call(limit, function(element) {\n                        if(element.value == c){\n                            element.selected = true;\n                        }\n                    });\n                }\n            } catch(e) {}\n        }());\n    </script>\n</form>\n<form class=\"actionBar\" method=\"get\" data-sort-by>\n    {{> components/category/sort-box sort=sort}}\n</form>\n\n"}
